{
    "author": "Vu Huynh",
    "manifest_version": 3,
    "name": "Web Novel Crawler",
    "description": "Tạo ebook từ web truyện. Get ebook from website",
    "version": "1.0",
    "permissions":  ["tabs", "scripting","cookies"],
    "action": {
        "default_icon": "img/icon64.png",
        "default_title": "Web Novel Crawler",
        "default_popup": "main.html"
    },
    "icons": {
        "16": "img/icon16.png",
        "64": "img/icon64.png",
        "128": "img/icon128.png"
    },
    "host_permissions": [
        "https://ngocsach.com/*",
        "https://bachngocsach.net.vn/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://ngocsach.com https://bachngocsach.net.vn"
    },
    "content_scripts": [
    {
       "js": ["js/contentSite.js"],
      "matches": [
        "https://bachngocsach.net.vn/*",  
        "https://bachngocsach.app/*",
        "https://voz.vn/*"]
    }
    ],"background": {
        "service_worker": "js/background.js"
    }
}
